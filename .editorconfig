root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = "UTF-8"
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[{composer.json,*.yml}]
indent_style = space
indent_size = 2
